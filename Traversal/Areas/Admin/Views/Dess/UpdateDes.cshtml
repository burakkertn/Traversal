@model EntityLayer.Entities.Des
@{
    ViewData["Title"] = "UpdateDes";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

   <div class="col-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title"> Hizmet Güncelleme</h4>
                 
                  <form class="forms-sample" method="post" >
                      @Html.HiddenFor(x=> x.Id)
@*--------------------------------------------------------------------------------------------------------------------------------------------------------*@
                        <div class="form-group">
                      <label for="exampleInputName1">Ülke/Şehir</label>
                     @Html.TextBoxFor(x => x.City, new { @class = "form-control"})
                       </div>
@*--------------------------------------------------------------------------------------------------------------------------------------------------------*@
                      <div class="form-group">
                      <label for="exampleInputEmail3">Gün/Gece</label>
                      @Html.TextBoxFor(x => x.DayNight, new { @class = "form-control"})
                        </div>
@*--------------------------------------------------------------------------------------------------------------------------------------------------------*@
                        <div class="form-group">
                      <label for="exampleTextarea1">Fiyat</label>
                      @Html.TextBoxFor(x => x.Price, new { @class = "form-control"})
                       </div>
@*--------------------------------------------------------------------------------------------------------------------------------------------------------*@
                      <div class="form-group">
                      <label for="exampleTextarea1">Resim 1</label>
                        @Html.TextBoxFor(x => x.Image, new { @class = "form-control"})
                      </div>
@*--------------------------------------------------------------------------------------------------------------------------------------------------------*@
                      <div class="form-group">
                      <label for="exampleTextarea1">Resim 2</label>
                       @Html.TextBoxFor(x => x.Image2, new { @class = "form-control"})
                      </div>
@*--------------------------------------------------------------------------------------------------------------------------------------------------------*@
                      <div class="form-group">
                      <label for="exampleTextarea1">Kapasite</label>
                       @Html.TextBoxFor(x => x.Capacity, new { @class = "form-control"})
                        </div>
@*--------------------------------------------------------------------------------------------------------------------------------------------------------*@
                      <div class="form-group">
                      <label for="exampleTextarea1">Detay 1</label>
                       @Html.TextBoxFor(x => x.Detay1, new { @class = "form-control"})
                      </div>
@*--------------------------------------------------------------------------------------------------------------------------------------------------------*@
                      <div class="form-group">
                      <label for="exampleTextarea1">Detay 2</label>
                       @Html.TextBoxFor(x => x.Detay2, new { @class = "form-control"})
                      </div>
@*--------------------------------------------------------------------------------------------------------------------------------------------------------*@
                    <br />
                    <button type="submit" class="btn btn-primary me-2">Güncelle</button>
                  </form>
                </div>
              </div>
            </div>