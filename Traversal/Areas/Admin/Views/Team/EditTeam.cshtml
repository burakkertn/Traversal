@model EntityLayer.Entities.Team
@{
    ViewData["Title"] = "EditTeam";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

   <div class="col-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title"> Takım Arkadaşı Bilgi Güncelleme</h4>
                 
                  <form class="forms-sample" method="post" >
                      @Html.HiddenFor(x=> x.ID)
@*--------------------------------------------------------------------------------------------------------------------------------------------------------*@
                        <div class="form-group">
                      <label for="exampleInputName1">Ad Soyad</label>
                     @Html.TextBoxFor(x => x.Name, new { @class = "form-control"})
                       </div>
@*--------------------------------------------------------------------------------------------------------------------------------------------------------*@
                      <div class="form-group">
                      <label for="exampleInputEmail3">Görsel Yolu</label>
                      @Html.TextBoxFor(x => x.Image, new { @class = "form-control"})
                        </div>
@*--------------------------------------------------------------------------------------------------------------------------------------------------------*@
                        <div class="form-group">
                      <label for="exampleTextarea1">Açıklama</label>
                      @Html.TextBoxFor(x => x.Des, new { @class = "form-control"})
                       </div>
@*--------------------------------------------------------------------------------------------------------------------------------------------------------*@
        
                    <br />
                    <button type="submit" class="btn btn-primary me-2">Güncelle</button>
                  </form>
                </div>
              </div>
            </div>