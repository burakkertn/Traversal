@model Traversal.Models.RegisterViewModel
@{
    Layout = null;
}


<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
		<title>Gökyüzü Seyahat Misafir Kayıt </title>
		<meta name="viewport" content="width=device-width, initial-scale=1.0">

		<!-- LINEARICONS -->
		<link rel="stylesheet" href="~/colorlib-regform-26/fonts/linearicons/style.css">
		
		<!-- STYLE CSS -->
		<link rel="stylesheet" href="~/colorlib-regform-26/css/style.css">
	</head>

	<body>

		<div class="wrapper">
			<div class="inner">
				<img src="~/colorlib-regform-26/images/image.png" alt="" class="image-1">
				<form method="post">
					<h3>Yeni Kayıt</h3>
					<div class="form-holder">
						<span class="lnr lnr-user"></span>
						<input type="text" class="form-control" placeholder="Adınız"  asp-for="Name" required>
							@*<span asp-validation-for="Name" class="text-danger"> </span>*@
					</div>
					<div class="form-holder">
						<span class="lnr lnr-user"></span>
						<input type="text" class="form-control" placeholder="Soyadınız" asp-for="SurName" required>
							@*<span asp-validation-for="SurName" class="text-danger"> </span>*@
					</div>
					<div class="form-holder">
						<span class="lnr lnr-envelope"></span>
						<input type="text" class="form-control" placeholder="Mail Adresiniz" asp-for="Mail" required>
							@*<span asp-validation-for="Mail" class="text-danger"> </span>*@
					</div>

					<div class="form-holder">
						<span class="lnr lnr-envelope"></span>
						<input type="text" class="form-control" placeholder="Kullanıcı Adınız" asp-for="UserName" required>
							@*<span asp-validation-for="UserName" class="text-danger"> </span>*@
					</div>

					<div class="form-holder">
						<span class="lnr lnr-envelope"></span>
						<input type="text" class="form-control" placeholder="Cinsiyet" asp-for="Gender" required>
							@*<span asp-validation-for="Gender" class="text-danger"> </span>*@
					</div>

					<div class="form-holder">
						<span class="lnr lnr-envelope"></span>
						<input type="text" class="form-control" placeholder="Resim Url" asp-for="ImageUrl" required>
						@*	<span asp-validation-for="ImageUrl" class="text-danger"> </span>*@
					</div>

					
					<div class="form-holder">
						<span class="lnr lnr-lock"></span>
						<input type="password" class="form-control" placeholder="Şifre" asp-for="Password" required>
					@*		<span asp-validation-for="Password" class="text-danger"> </span>*@
					</div>
					<div class="form-holder">
						<span class="lnr lnr-lock"></span>
						<input type="password" class="form-control" placeholder="Şifre Tekrar" asp-for="passwordConfirm" required>
						@*<span asp-validation-for="passwordConfirm" class="text-danger"> </span>*@
							
					</div>

					<div class="text-danger" asp-validation-summary="ModelOnly"></div>

					<button>
						<span>Üye Ol</span>
					</button>
					<br />
				<div class="text-center mt-4 font-weight-light">
                     &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;  Zaten Bir Hesabınız Var Mı? <a href="/Login/SignIn" class="text-primary">Giriş Yap</a>
                </div>

				</form>
				<img src="~/colorlib-regform-26/images/image-2.png" alt="" class="image-2">


			</div>
			
			
		</div>
		
		<script src="~/colorlib-regform-26/js/jquery-3.3.1.min.js"></script>
		<script src="~/colorlib-regform-26/js/main.js"></script>
	</body><!-- This templates was made by Colorlib (https://colorlib.com) -->
</html>